func controller_welcome()

	;----------------------------------------------------------------------------------------------/
	; geniere eine zuf√§llige Farbe
	;----------------------------------------------------------------------------------------------/
	Local $aColor = ['#311E3E' ,'#86314D' ,'#512645' ,' #311E3E']

	$toView('defColor', $aColor[Random(0, 3, 1)])
	$toView('appName', $APP('NAME'))
	;----------------------------------------------------------------------------------------------/
	; Return statische html View
	;----------------------------------------------------------------------------------------------/
	return $VIEW('welcome')
endfunc