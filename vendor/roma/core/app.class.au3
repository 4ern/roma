;use vendor/roma/core
global $roma_app = obj_app()

#cs
|-----------------------------------------------------------------------------------------------/
| App Config Object
|-----------------------------------------------------------------------------------------------/
|
| Author = 4ern
|
| childs = gui_config()
|        = autoit_config()
|
#ce
func obj_app()

    local $this = _AutoItObject_Class()
    
    ;----------------------------------------------------------------------------------------------/
    ; declare propertys
    ;----------------------------------------------------------------------------------------------/
    with $this

        ;----------------------------------------------------------------------------------------------/
        ; APP
        ;----------------------------------------------------------------------------------------------/
        .AddProperty('NAME')
        .AddProperty('VERSION')
        .AddProperty('BETA')
        .AddProperty('LANG')
        .AddProperty('DEVELOPE')
        .AddProperty('IP')
        .AddProperty('PORT')
        .AddProperty('LOG')

        ;----------------------------------------------------------------------------------------------/
        ; GUI Object
        ;----------------------------------------------------------------------------------------------/
        .AddProperty('gui', $ELSCOPE_PUBLIC, obj_gui)
        .AddProperty('option', $ELSCOPE_PUBLIC, obj_autoit_opt)

    endwith

    return $this.object
endfunc

#cs
|-----------------------------------------------------------------------------------------------/
| GUI Config Object -- child
|-----------------------------------------------------------------------------------------------/
|
| Author    :: 4ern
|
#ce
func obj_gui()

    local $this = _AutoItObject_Class()
    
    ;----------------------------------------------------------------------------------------------/
    ; declare propertys
    ;----------------------------------------------------------------------------------------------/
    $this.AddProperty('production', $ELSCOPE_PUBLIC, 'ie_embedded')
    $this.AddProperty('develop', $ELSCOPE_PUBLIC, 'browser')

    return $this.object
endfunc

#cs
|-----------------------------------------------------------------------------------------------/
| Autoit Options Config -- child
|-----------------------------------------------------------------------------------------------/
|
| Author    :: 4ern
|
#ce
func obj_autoit_opt()
    
    local $this = _AutoItObject_Class()
    
    ;----------------------------------------------------------------------------------------------/
    ; declare propertys
    ;----------------------------------------------------------------------------------------------/
    $this.AddMethod("set", "meth_set")

    return $this.object
endfunc

;----------------------------------------------------------------------------------------------/
; set - autoit_config()
;----------------------------------------------------------------------------------------------/
func meth_set($this, $option, $value)
    #forceref $this
    return AutoItSetOption($option,$value)
endfunc