global $roma_app = _vendor_roma_core__app_object()


;----------------------------------------------------------------------------------------------/
; Initial Object
;----------------------------------------------------------------------------------------------/
func _vendor_roma_core__app_object()
    
    ;----------------------------------------------------------------------------------------------/
    ; create object
    ;----------------------------------------------------------------------------------------------/
    local $class = _AutoItObject_Class()
    $class.Create()

    ;----------------------------------------------------------------------------------------------/
    ; declare propertys
    ;----------------------------------------------------------------------------------------------/
    with $class

        ;----------------------------------------------------------------------------------------------/
        ; APP
        ;----------------------------------------------------------------------------------------------/
        .AddProperty('NAME')
        .AddProperty('VERSION')
        .AddProperty('BETA')
        .AddProperty('LANG')
        .AddProperty('DEVELOPE')
        .AddProperty('IP')
        .AddProperty('PORT')
        .AddProperty('LOG')

        ;----------------------------------------------------------------------------------------------/
        ; gui
        ;----------------------------------------------------------------------------------------------/
        .AddProperty('gui_production', $ELSCOPE_PUBLIC, 'ie_embedded')
        .AddProperty('gui_develop', $ELSCOPE_PUBLIC, 'browser')
    endwith

    ;----------------------------------------------------------------------------------------------/
    ; declare methods
    ;----------------------------------------------------------------------------------------------/
    with $class
        .AddMethod('addOpt', '_vendor_roma_core__autoit_options')
    endwith

    ;----------------------------------------------------------------------------------------------/
    ; return object
    ;----------------------------------------------------------------------------------------------/
    return $class.object
endfunc

;----------------------------------------------------------------------------------------------/
; set autoit options
;----------------------------------------------------------------------------------------------/
func _vendor_roma_core__autoit_options($this, $option, $value)
    #forceref $this
    return AutoItSetOption($option,$value)
endfunc

